    <style name="AppThemes" parent="@android:style/Theme.DeviceDefault.DayNight">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:checkboxStyle">@style/checkbox_style</item>
        <item name="android:windowAnimationStyle">@style/Animation</item>
        <item name="android:alertDialogTheme">@android:style/Theme.DeviceDefault.Dialog.Alert</item>
    </style>

    <style name="checkbox_style" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:buttonTint">@android:color/darker_gray</item>
